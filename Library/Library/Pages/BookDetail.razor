@page "/book/{ISBN}"
@inject IJSRuntime JSRuntime;
@if (!Saved)
{
    <h1 class="page-title">Details for @Book.Title </h1>

    <a class="btn btn-danger" @onclick="@DeleteBook">
        Delete
    </a>
    <a href="@($"editbook/{Book.ISBN}")" class="btn btn-primary">
        Edit
    </a>

    <hr />
    
    <div class="col-12 row">
        <div class="col-2">
            <img src="@($"images/image{Book.Id}.jpg")" class="img-fluid img-thumbnail rounded float-left" />
        </div>
        <div class="col-10 row">
            <div class="col-xs-12 col-sm-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Title</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Book.Title</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Book.Description</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Release Date</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Book.ReleaseDate</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">ISBN</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Book.ISBN</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Category</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Book.Category</label>
                    </div>
                </div>           
            </div>
        </div>
    </div>
}
else
{
    <div class="alert @StatusClass">@Message</div>
    <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to overview</a>
}

