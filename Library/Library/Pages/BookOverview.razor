@page "/books"
@using Library.Books;

<h1 class="page-title">All Books</h1>
<div class="dropdown">
    <button class="dropbtn">Order</button>
    <div class="dropdown-content"> 
                                               <!--Disabling href-->
        <a href="" @onclick="OrderByTitleAscending" @onclick:preventDefault>Name(ascending)</a>
        <a href="" @onclick="OrderByTitleDescending" @onclick:preventDefault>Name(descending)</a>
        <a href="" @onclick="OrderByAgeAscending" @onclick:preventDefault>Age(ascending)</a>
        <a href="" @onclick="OrderByAgeDescending" @onclick:preventDefault>Age(descending)</a>
    </div>
</div>

<input id="searchbar" onkeyup="myFunction()" type="text"
       name="search" placeholder="Search books by Title..">
    <table id="table" class="table">
        <thead>
            <tr class="header">
                <th>Title</th>
                <th>Description</th>
                <th>Release date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        
        @{
            
            //foreach to display the books using the queries in bookoverview.cs
                foreach (var book in Books)
            {
                <tr class="book-search">
                    <td>@book.Title</td>
                    <td>@book.SmallDescription</td>
                    <td>@book.ReleaseDate</td>
                    <td>
                        <a href="@($"book/{book.Id}")" class="btn btn-primary table-btn">
                           Details
                        </a>
                    </td>
                </tr>
            }
            } 
        </tbody>
    </table>
    
    


